{
  "name": "capuchin",
  "version": "0.0.1",
  "description": "Lightweight, fluent TypeScript DOM manipulation library",
  "main": "src/index.ts",
  "scripts": {
    "watch": "npm-run-all --parallel watch:*:*",
    "watch:test:unit": "jest --no-cache --config ./.config/jest.config.json --watch --notify",
    "watch:lint:ts": "chokidar src/**/*.ts test/**/*.ts -c \"npm run lint:ts\" --initial --verbose",
    "lint": "npm-run-all --parallel lint:*",
    "lint:ts": "tslint -c ./.config/tslint.json **/*.ts",
    "test": "npm-run-all --parallel test:*",
    "test:unit": "jest --no-cache --config ./.config/jest.config.json --coverage"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lindsayevans/capuchin.git"
  },
  "keywords": [
    "typescript",
    "dom",
    "html",
    "fluent"
  ],
  "author": "Lindsay Evans <linz@linz.id.au>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lindsayevans/capuchin/issues"
  },
  "homepage": "https://github.com/lindsayevans/capuchin#readme",
  "devDependencies": {
    "@types/jest": "^20.0.2",
    "chokidar": "^1.7.0",
    "chokidar-cli": "^1.2.0",
    "jest": "^20.0.4",
    "npm-run-all": "^4.0.2",
    "pre-commit": "^1.2.2",
    "ts-jest": "^20.0.6",
    "ts-node": "^3.2.0",
    "tslint": "^5.5.0",
    "typedoc": "^0.7.1",
    "typescript": "^2.4.1"
  }
}
